#:kivy 2.3.0

<MenuPageWidget>:
  BoxLayout:
    id: layout
    pos: 0, 0 if root.is_empty else (root.padding_bottom - dp(UBO_GUI_MENU_ITEM_HEIGHT + UBO_GUI_MENU_ITEM_GAP if root.render_surroundings else 0))
    size: root.size
    orientation: 'vertical'

    Widget:
      size_hint: 1, None
      height: dp(14) if root.has_heading else 0

    Label:
      text: root.heading
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      font_size: dp(20)
      color: 1, 1, 1
      size_hint: 1, None
      height: dp(60) if root.has_heading else 0
      max_lines: 2
      strip: True
      shorten_from: 'right'
      markup: True

    Label:
      text: root.sub_heading
      text_size: self.size
      font_size: dp(16)
      halign: 'center'
      valign: 'middle'
      height: dp(50) if root.has_heading else 0
      color: .8, .8, .8
      size_hint: 1, None
      max_lines: 2
      shorten_from: 'right'
      markup: True
      
    Widget:
      size_hint: 1, None
      height: dp(10) if root.has_heading else 0

    Label:
      text: ('Nothing here yet' if root.placeholder is None else root.placeholder) if root.is_empty else ''
      text_size: self.size
      font_size: dp(20)
      halign: 'center'
      valign: 'middle'
      height: 0 if root.is_empty else 1
      size_hint_y: 1 if root.is_empty else None
      color: .6, .6, .6
      bold: True
      italic: True
      markup: True

    BoxLayout:
      id: layout
      height: (dp(UBO_GUI_MENU_ITEM_HEIGHT) if root.has_heading else 0) if root.is_empty else self.minimum_height
      size_hint_y: None
      orientation: 'vertical'
      spacing: dp(UBO_GUI_MENU_ITEM_GAP)
