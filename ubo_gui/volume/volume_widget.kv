#:kivy 2.3.0

<VolumeWidget>:
  canvas.before:
    Color:
      rgba: self.background_color

    RoundedRectangle:
      pos: self.pos[0] + (self.width - dp(25)) / 2, self.pos[1]
      size: dp(25), self.height
      radius: (dp(5), dp(5)), (dp(5), dp(5)), (dp(5), dp(5)), (dp(5), dp(5))

    Color:
      rgba: self.fill_color

    RoundedRectangle:
      pos: self.pos[0] + (self.width - dp(25)) / 2, self.pos[1]
      size: dp(25), self.height * self.value / 100
      radius: (dp(5), dp(5)), (dp(5), dp(5)), (dp(5), dp(5)), (dp(5), dp(5))

  orientation: 'vertical'
  spacing: dp(8)
  minimum_width: dp(25)

  Label:
    text: ''
    size_hint: 1, None
    height: dp(24)

  Widget:
    size_hint: 0, 1

  Label:
    text: ''
    size_hint: 1, None
    height: dp(24)
